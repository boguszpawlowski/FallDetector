<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/nav_graph"
            app:startDestination="@id/homeFragment">

    <fragment android:id="@+id/alarmFragment"
              android:name="com.example.bpawlowski.falldetector.ui.main.alarm.AlarmFragment"
              android:label="Alarm">
        <action android:id="@+id/action_alarmFragment_to_settingsFragment" app:destination="@id/settingsFragment"/>
    </fragment>

    <fragment android:id="@+id/callFragment"
              android:name="com.example.bpawlowski.falldetector.ui.main.call.CallFragment"
              android:label="Dial">
        <action android:id="@+id/action_callFragment_to_settingsFragment" app:destination="@id/settingsFragment"/>
    </fragment>

    <fragment android:id="@+id/contactsFragment"
              android:name="com.example.bpawlowski.falldetector.ui.main.contacts.ContactsFragment"
              android:label="Contacts">
        <action android:id="@+id/showDialog"
                app:destination="@id/formDialogFragment"/>
        <action android:id="@+id/action_contactsFragment_to_settingsFragment" app:destination="@id/settingsFragment"/>
    </fragment>

    <dialog android:id="@+id/formDialogFragment"
            android:name="com.example.bpawlowski.falldetector.ui.main.contacts.FormDialogFragment"
            android:label="Add Contact">
        <argument
                android:name="contact_id"
                app:argType="long"/>
    </dialog>

    <fragment android:id="@+id/settingsFragment"
              android:name="com.example.bpawlowski.falldetector.ui.main.settings.SettingsFragment"
              android:label="Settings"/>

    <fragment android:id="@+id/homeFragment"
              android:name="com.example.bpawlowski.falldetector.ui.main.home.HomeFragment"
              android:label="Home">
        <action android:id="@+id/showSettings"
                app:destination="@id/settingsFragment"/>
    </fragment>

    <fragment android:id="@+id/messageFragment"
              android:name="com.example.bpawlowski.falldetector.ui.main.sms.MessageFragment"
              android:label="Message">
        <action android:id="@+id/action_messageFragment_to_settingsFragment" app:destination="@id/settingsFragment"/>
    </fragment>
</navigation>