<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
                name="infoContainer"
                type="com.example.bpawlowski.falldetector.activity.base.recycler.DataListHolder"/>
    </data>

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="8dp">
        <ImageView
                android:id="@+id/img_arrow_down"
                android:src="@{infoContainer.isExpanded ? @drawable/icon_arrow_down : @drawable/icon_arrow_up}"
                tools:src="@drawable/icon_arrow_down"
                android:layout_height="25dp"
                android:layout_width="25dp"
                android:layout_margin="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:id="@+id/txt_user_Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:text="@{infoContainer.groupDescription}"
                android:layout_margin="8dp"
                tools:text="Group Description"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>


    </android.support.constraint.ConstraintLayout>

</layout>