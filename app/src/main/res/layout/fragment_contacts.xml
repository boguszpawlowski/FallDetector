<layout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools">

	<data>

		<variable
			name="viewModel"
			type="com.example.bpawlowski.falldetector.screens.main.contacts.ContactsViewModel"/>
	</data>

	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".screens.main.contacts.ContactsFragment">

		<androidx.recyclerview.widget.RecyclerView
			android:id="@+id/recycler_contact"
			android:layout_width="0dp"
			android:layout_height="0dp"
			app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			tools:listitem="@layout/contact_item"/>

		<!--todo test this-->
		<TextView
			android:id="@+id/tv_no_contacts"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/tv_no_contacts_yet"
			android:textSize="@dimen/text_no_contacts"
			android:textStyle="bold"
			android:visibility="gone"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:visible="@{viewModel.contactsLiveData.isEmpty()}"
			tools:visibility="visible"/>

		<com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
			android:id="@+id/fab"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="@dimen/margin_medium"
			android:elevation="@dimen/elevation_fab"
			android:scaleType="center"
			android:text="@string/fab_label"
			app:icon="@drawable/icon_plus"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"/>

	</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
